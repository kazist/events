{# empty Twig template #}

{{ set_assets('applications/Events/assets/css/style.css') }}

<h1 class="component-header"> All Events</h1>

<ul class="event-list">
    {%  for item in items %}
        <li>
            <time datetime="{{ item.start_date|date('Y-m-d') }}">
                <span class="day">{{ item.start_date|date('d') }}</span>
                <span class="month">{{ item.start_date|date('M') }}</span>
                <span class="year">{{ item.start_date|date('Y') }}</span>
            </time>
            <img alt="{{ item.title }}" src="{{ item.image_file }}" />
            <div class="info">
                <h2 class="title">
                    <a href="{{ generate_url('events.events.detail', {'id': item.id}) }}">
                        {{ item.title }}
                    </a>
                </h2>
                <p class="desc">{{ item.description|striptags|truncate(100) }}</p>
                <ul>
                    <li style="width:50%;">
                        <b>From:</b>
                        {{ item.start_date|date('Y M d') }}
                    </li>
                    <li style="width:50%;">
                        <b>To:</b>
                        {{ item.start_date|date('Y M d') }}
                    </li>
                </ul>
            </div>
        </li>
    {% endfor %}
</ul>
